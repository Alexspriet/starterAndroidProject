<resources>

    <style name="StartTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleGoal" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">21sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="stateGoal" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="dateGoal" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- style for GoalActivity -->
    <style name="GoalTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/background_toolbar_translucent</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/background_toolbar_translucent</item>
    </style>

    <style name="yourRules" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">11dp</item>
    </style>

    <style name="yourWeek" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="yourAmount" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="titleGoalActivity" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="stateGoalActivity" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">11dp</item>
    </style>

    <style name="messageEntry" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="infoEntry" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="amountEntry" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#7EBC42</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
